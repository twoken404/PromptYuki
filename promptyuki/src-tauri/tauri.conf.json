{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "PromptYuki",
  "version": "1.0.7",
  "identifier": "com.promptyuki.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "PromptYuki",
        "width": 800,
        "height": 800,
        "minWidth": 512,
        "minHeight": 600,
        "resizable": true
      }
    ],
    "security": {
      "csp": null
    },
    "withGlobalTauri": true
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "publisher": "PromptYuki",
    "shortDescription": "AI Prompt 管理工具",
    "longDescription": "极致简洁、高效优雅的跨平台 Prompt 管理工具，让 AI 提示词创作从一次性消耗品变为可积累、可复用的数字资产。",
    "windows": {
      "nsis": {
        "displayLanguageSelector": false
      }
    }
  },
  "plugins": {
    "persistedScope": {
      "allow": [
        "**/*"
      ]
    }
  }
}

